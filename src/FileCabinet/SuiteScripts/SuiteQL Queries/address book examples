SELECT 
    contact.id,
    contact.firstname,
    contact.lastname,
    contactaddressbook.internalid AS addressbook_id,
    contactaddressbookentityaddress.addr1,
    contactaddressbookentityaddress.addr2,
    contactaddressbookentityaddress.city,
    contactaddressbookentityaddress.state,
    contactaddressbookentityaddress.zip,
    contactaddressbookentityaddress.country
FROM contact
LEFT OUTER JOIN contactaddressbook ON (contact.id = contactaddressbook.entity)
LEFT OUTER JOIN contactaddressbookentityaddress ON (contactaddressbook.addressbookaddress = contactaddressbookentityaddress.nkey)
WHERE contact.id = 448923